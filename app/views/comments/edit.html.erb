<h1>Edit Comment</h1>

<%= form_for([@article, @comment]) do |f| %>
  <p>
    <%= f.label :commenter, "Nombre" %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body, "Comentario" %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Actualizar" %>
  </p>
<% end %>
